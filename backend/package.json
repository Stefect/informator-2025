    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/ws": "^8.5.6",
    "@types/cors": "^2.8.15",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1"
  },
  "keywords": ["backend", "video-streaming", "websocket", "cloudflare"],
  "author": "Informator Team",
  "license": "MIT"
}