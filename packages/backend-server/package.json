{
  "name": "@informator/backend-server",
  "version": "2.0.0",
  "description": "Backend server for receiving and distributing video streams",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rimraf dist",
    "docker:build": "docker build -t informator-backend .",
    "docker:run": "docker run -p 3001:3001 informator-backend"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "mongoose": "^8.19.0",
    "sharp": "^0.34.4",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^20.8.0",
    "@types/ws": "^8.5.6",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "websocket",
    "video-streaming",
    "backend",
    "cloudflare-compatible"
  ],
  "author": "Informator Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
