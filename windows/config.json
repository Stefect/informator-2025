{
  "server": {
    "host": "127.0.0.1",
    "port": 3000
  },
  "capture": {
    "fps": 5,
    "quality": 85,
    "resolution": {
      "width": 1280,
      "height": 720
    },
    "adaptiveQuality": true,
    "changeThreshold": 0.05,
    "networkLimit": 10
  },
  "ui": {
    "showFps": true,
    "showStats": true,
    "minimizeToTray": true
  },
  "debug": {
    "logLevel": "info",
    "showConnectionStatus": true,
    "recordVideo": false,
    "recordPath": "./recordings"
  },
  "performance": {
    "optimizeCPU": true,
    "optimizeMemory": true,
    "gcInterval": 60000
  }
}